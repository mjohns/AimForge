include "common.fbs";

namespace aim;

table Crosshair {
  dot: DotCrosshair;
}

table DotCrosshair {
  dot_size: float;
  draw_outline: bool;
  dot_color: StoredRgb;
  outline_color: StoredRgb;
}

table Settings {
  name: string;
  crosshair: Crosshair;
  cm_per_360: float;
  dpi: float;
  theme_name: string;
}

table FullSettings {
  settings: [Settings];
}

root_type FullSettings;
